a
    text-decoration none
h1
    color green
body
    font-size 16px
    // background linear-gradient(top, yellow, black)
figure
    margin 0
.actions
    background rgba(0,0,0,0.5)
    bottom 0
    font-size 1rem
    position absolute
    
    width 100%

.container
    font-size 0
    padding 2.8rem
    text-align center
.header
    text-align center
    border-bottom 1px solid gris_claro
    .title
        height 4em
        line-height 4em
        font-size 1.2em
    .btn-menu
        color gris_oscuro
        float left
        font-size 3em
        left .4em
        position relative
        top .4em
.image
    position relative
.menu
    display none
    background rgba(0,0, 0, 0.7)
    color white
    height 100%
    left 0
    position absolute
    text-align left
    top 0
    width 80%
    .item
        border-bottom 1px dashed white
        list-style-type none
        
        a
            text-decoration none
            color white


.song
    display inline-block
    font-size 1rem
    margin-bottom 2.8em
    margin-right 2em
    text-align right
    width 128px
    &:nth-child(even)
        margin-right 0
    p
        margin .5em 0
    .name
        color gris_oscuro
    .author
        color gris_claro

